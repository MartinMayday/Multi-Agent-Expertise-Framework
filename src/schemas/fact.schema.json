{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fact",
  "description": "Triplet fact: (Subject, Predicate, Object)",
  "type": "object",
  "properties": {
    "subject": {
      "type": "string",
      "description": "Subject of the fact"
    },
    "predicate": {
      "type": "string",
      "description": "Relationship or property"
    },
    "object": {
      "type": "string",
      "description": "Object of the fact"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score [0-1]"
    },
    "source": {
      "type": "string",
      "description": "Where this fact came from"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the fact was extracted"
    }
  },
  "required": ["subject", "predicate", "object"],
  "additionalProperties": false
}
